{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"esModuleInterop": true,
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"types": ["jest", "node"]
	},
	"include": ["*.ts", "/static/*"],
	"exclude": [
		"dist",
		"node_modules",
		"jest.config.ts",
		"/__tests__/**",
	]
}
