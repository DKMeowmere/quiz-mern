{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"esModuleInterop": true,
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"types": ["jest", "node", "@types/jest"]
	},
	"include": ["*.ts", "/static/*", "env.prod"],
	"exclude": ["dist", "node_modules", "__tests__/**", "jest.config.ts"]
}
